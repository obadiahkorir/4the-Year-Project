<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/bg_screen6"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/locationstatisticscard"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="1dp"
                >

                <LinearLayout
                    android:id="@+id/locationstatisticslinear"

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/locstatisticstext"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:text="ENJOY OUR PREMIUM SERVICES"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        />
                </LinearLayout>



                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/progressBar"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="14dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />


            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/cv_account"
                android:layout_weight="0.5"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="130dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"

                >
                <ProgressBar
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:id="@+id/progress"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:id="@+id/nexkofkin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/chat"
                        />

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:textSize="12dp"
                        android:text="Online Chat"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_weight="0.5"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fire"
                android:layout_width="0dp"
                android:layout_height="130dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="1dp"
                >
                <LinearLayout
                    android:id="@+id/firelayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/report"
                        />

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:textSize="12dp"
                        android:text="Reports"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!--row2-->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:layout_weight="0.5"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="130dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="2dp"
                >

                <LinearLayout
                    android:id="@+id/ambulance_layout"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/backup"
                        />

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:textSize="12dp"
                        android:text="Private Services"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        />

                </LinearLayout>-->

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_weight="0.5"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/cv_send_cash"
                android:layout_width="0dp"
                android:layout_height="130dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="2dp"
                >

                <LinearLayout
                    android:id="@+id/police_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/police"
                        />

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:textSize="12dp"
                        android:text="Private Security"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        />

                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_weight="0.5"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:id="@+id/accidents"
                android:layout_height="130dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="2dp"
                >
                <LinearLayout
                    android:id="@+id/accident_layout"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:id="@+id/accident"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/acc"
                        />

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/accident_name"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:textSize="12dp"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_weight="0.5"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gallery"
                android:layout_width="0dp"
                android:layout_height="130dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="2dp"
                >

                <LinearLayout
                    android:id="@+id/gallery_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/attack"
                        />

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:textSize="12dp"
                        android:text="Wanted"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</ScrollView>



