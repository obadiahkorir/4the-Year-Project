<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_premium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@drawable/crimereport"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.simba.glinde.Premium"
        android:weightSum="1">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_width="321dp"
            android:layout_weight="0.06">

            <TextView
                android:text="Unlock our premium features:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/etAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="10"

                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"
                android:layout_toEndOf="@+id/textView6" />


        </RelativeLayout>

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Enter Amount"
            android:background="@drawable/roundtextview"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="normal|italic" />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:layout_width="fill_parent"


            >
            <Button
                android:id="@+id/bPay"
                android:layout_width="wrap_content"
                android:background="@drawable/custom_button"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="Pay"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bConfirm"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_button"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_below="@+id/bPay"

                android:layout_height="wrap_content"
                android:text="Confirm Pay"
                android:textSize="18sp"
                android:textStyle="normal|bold" />


        </RelativeLayout>



        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_width="fill_parent">

            <TextView
                android:text="Attempts:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView3"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="24sp"
                android:id="@+id/textView_attemt_Count"
                android:textStyle="normal|bold"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignTop="@+id/textView3" />
        </RelativeLayout>


        <Button
            android:id="@+id/bAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:background="@drawable/custom_button"
            android:text="Access Premium contents"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/width_height"
            android:layout_height="109dp"
            android:layout_gravity="center"
            android:src="@drawable/lipampesa" />

    </LinearLayout>
</ScrollView>