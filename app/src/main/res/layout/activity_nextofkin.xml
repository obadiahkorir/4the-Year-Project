<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:clickable="true"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv_statement"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/savekin"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:padding="5dp"
                android:src="@drawable/fam" />

            <EditText
                android:id="@+id/numb1"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView6"
                android:layout_marginTop="23dp"
                android:gravity="center"
                android:hint="Enter first Number"
                android:inputType="phone"
                android:textColor="@color/colorAccent"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/numb2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/numb1"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:hint="Enter second Number"
                android:inputType="phone"
                android:textColor="@color/colorAccent"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/readno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:textColor="@color/blue"
                android:textSize="28dp"
                android:layout_below="@+id/save"
                android:layout_alignRight="@+id/call"
                android:layout_alignEnd="@+id/call"
                android:layout_marginTop="14dp"
                android:layout_alignLeft="@+id/premium"
                android:layout_alignStart="@+id/premium" />

            <Button
                android:id="@+id/save"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="Save"
                android:background="@drawable/login_button"
                android:textColor="@color/grey"
                android:textSize="16dp"
                android:layout_below="@+id/numb2"
                android:layout_toLeftOf="@+id/premium"
                android:layout_toStartOf="@+id/premium"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/call"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="View"
                android:background="@drawable/login_button"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_below="@+id/numb2"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_toEndOf="@+id/imageView6" />

            <Button
                android:id="@+id/calls"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MAKE CALL"
                android:background="@drawable/login_button"
                android:textColor="@color/grey"
                android:textSize="12dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="14dp" />
            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fab_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                fab:menu_backgroundColor="#ccffffff"
                fab:menu_fab_label="Choose an action"
                fab:fab_colorNormal="#DA4336"
                fab:fab_colorPressed="#E75043"
                fab:fab_colorRipple="#99FFFFFF"
                fab:fab_showShadow="true"
                fab:menu_labels_colorNormal="#333333"
                fab:menu_labels_colorPressed="#444444"
                fab:menu_labels_colorRipple="#66FFFFFF"
                fab:menu_labels_showShadow="true"
                fab:menu_labels_maxLines="-1"
                fab:menu_labels_position="left"
                fab:menu_openDirection="up"
                fab:fab_shadowColor="#66000000"
                fab:menu_labels_ellipsize="end"
                fab:menu_labels_singleLine="true">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_edit"
                    fab:fab_label="Edit an item"
                    fab:fab_size="mini" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_add"
                    fab:fab_label="Add"
                    fab:fab_size="mini" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_delete"
                    fab:fab_label="Delete"
                    fab:fab_size="mini" />

            </com.github.clans.fab.FloatingActionMenu>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
